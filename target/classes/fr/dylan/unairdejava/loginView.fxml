<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="493.0" prefWidth="817.0" spacing="20.0" style="-fx-background-color: #555;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.dylan.unairdejava.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Un Air de Java" textFill="WHITE">
      <font>
         <Font name="Century Gothic Bold" size="24.0" />
      </font>
   </Label>
   <HBox alignment="CENTER" prefHeight="57.0" prefWidth="449.0">
      <children>
         <Label text="Identifiant" textFill="WHITE">
            <font>
               <Font size="20.0" />
            </font>
            <padding>
               <Insets right="50.0" />
            </padding>
         </Label>
         <TextField fx:id="tfId" alignment="CENTER" prefHeight="40.0" prefWidth="249.0" promptText="Dylan">
            <font>
               <Font size="19.0" />
            </font>
         </TextField>
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="53.0" prefWidth="449.0">
      <children>
         <Label text="Mot de Passe" textFill="WHITE">
            <font>
               <Font size="20.0" />
            </font>
            <padding>
               <Insets right="40.0" />
            </padding>
         </Label>
         <TextField fx:id="tfMdp" alignment="CENTER" prefHeight="40.0" prefWidth="250.0" />
      </children>
   </HBox>
   <Label fx:id="lblConnectError" textFill="RED">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <Button fx:id="btnConnect" mnemonicParsing="false" onAction="#onConnectAction" prefHeight="44.0" prefWidth="414.0" style="-fx-background-color: green; -fx-border-style: none;" text="Connexion" textFill="WHITE">
      <font>
         <Font name="System Bold" size="15.0" />
      </font>
   </Button>
   <Button fx:id="btnLeave" mnemonicParsing="false" onAction="#onLeaveAction" prefHeight="44.0" prefWidth="414.0" style="-fx-background-color: red; -fx-border-style: none;" text="Quitter" textFill="WHITE">
      <font>
         <Font name="System Bold" size="15.0" />
      </font>
   </Button>
</VBox>
